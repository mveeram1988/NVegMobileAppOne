<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >


<ImageView
    android:id="@+id/ivImage"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:src="@mipmap/ic_launcher"
    android:layout_marginTop="55dp" />


    <TextView
        android:id="@+id/tvUserLocation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="UnKnown is your Location"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/tvUseMyLocation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Use MyLocation"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:background="@drawable/my_loc_border"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="(OR)"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/tvPickUserLocation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Pick Different Location"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:background="@drawable/pick_up_loc_border"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"/>


</LinearLayout>